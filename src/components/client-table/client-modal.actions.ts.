"use server";

import { db } from "@/db";
import { taskBlueprints } from "@/db/schema/tasks-blueprint";
import { eq } from "drizzle-orm";

export async function getClientTaskBlueprints(clientId: string) {
  return db
    .select()
    .from(taskBlueprints)
    .where(eq(taskBlueprints.clientId, clientId));
}
